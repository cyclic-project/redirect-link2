<!-- redirect.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
 <meta charset="UTF-8">
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>Marsel | Redirecting -> <%= redirect.url %></title>
 <meta http-equiv="refresh" content="3.5;url=<%= redirect.url %>">
 <style>
  body {
   font-family: Arial, sans-serif;
   text-align: center;
   margin: 50px;
   display: flex;
   flex-direction: column;
   align-items: center;
   min-height: 90vh;
  }

  h1 {
   color: #333;
  }

  p {
   margin: 20px 0;
  }

  footer {
   margin-top: auto;
   color: #777;
   text-align: center;
   position: fixed;
   bottom: 0;
   width: 100%;
  }

  @media only screen and (max-width: 600px) {
   /* Sesuaikan gaya untuk layar kecil di sini jika diperlukan */
  }
 </style>
</head>

<body scroll="auto">

 <form id="page">
  <h1>Redirecting...</h1>
  <p>Please wait, you are being redirected to the target page.</p>
 </form>

 <footer>
  Marsel Redirect page &copy; 2023
 </footer>

 <script>
  setTimeout(() => {
   document.querySelector("#page").style = "visibility: hidden;";
  }, 3000);
 </script>
</body>

</html>